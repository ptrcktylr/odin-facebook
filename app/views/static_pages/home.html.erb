<main role="main" class="container">
  <div class="jumbotron">
    <h1 class="display-4">Odinbook</h1>
    <hr class="my-4">

    <p class="lead">Welcome to Odinbook!</p>
    <% if current_user %>
      <%= link_to("See Feed", posts_path, class: "btn btn-primary") %>
    <% else %>
      <%= link_to("Sign In", new_user_session_path, class: "btn btn-primary mr-1") %>
      <%= link_to("Sign Up", new_user_registration_path, class: "btn btn-info") %>
    <% end %>
  </div>
</main>

